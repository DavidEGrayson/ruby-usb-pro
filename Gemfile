source "http://rubygems.org"

# The ruby-usb-pro gem has no dependencies except libusb-1.0.
# You can install it in Ubuntu Linux with:
#  sudo apt-get install libusb-1.0-0-dev

# For developing the ruby-usb-pro gem, these gems are required:
group :development do
  gem "rspec", "~> 2.3.0"
  gem "bundler", "~> 1.0.0"
  gem "jeweler", "~> 1.6.2"
  gem "rcov", ">= 0"
  gem "yard"
end
